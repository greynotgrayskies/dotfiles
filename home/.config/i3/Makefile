LOCALDIR := home/.config/i3
HOMEDIR := $(patsubst home/%, ${HOME}/%, ${LOCALDIR})

${LOCALDIR}/config: $(addprefix ${LOCALDIR}/, base.conf local.conf)
	echo "# THIS FILE HAS BEEN AUTOGENERATED" > $@
	echo "# Changes made to this file may be lost." >> $@
	for conf in $^; do\
		echo "# $$(basename $${conf})" >> $@;\
		cat $${conf} >> $@;\
	done

